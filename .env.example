# DigitalOcean Gradient™ AI API Key
# Get yours at: https://cloud.digitalocean.com/account/api/tokens
GRADIENT_API_KEY=your_gradient_api_key_here

# Gradient™ AI endpoint (default — no need to change)
GRADIENT_BASE_URL=https://inference.do-ai.run/v1

# Model to use for inference
GRADIENT_MODEL=llama3.1-70b-instruct

# Frontend URL for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://gradient-fisherman.vercel.app

# App environment
APP_ENV=development

# Max upload size in MB
MAX_FILE_SIZE_MB=10
